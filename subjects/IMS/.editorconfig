root = true

[*]
charset = utf-8
end_of_line = LF
indent_style = space
indent_size = 2
# Max line length.
max_line_length = 80
# Remove any whitespace characters preceding newline characters.
trim_trailing_whitespace = true
# Newline ending every file.
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

